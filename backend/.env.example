# Environment Configuration Template
# Copy this file to .env.dev or .env.prod and fill in the values

# Application
ENVIRONMENT=development
APP_NAME=Tutorly Platform
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database
DATABASE_URL=sqlite:///./tutorly_platform.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/tutorly_platform_db

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=tutorly-platform-files
S3_REGION=us-east-1
MAX_PHOTO_SIZE_MB=5
MAX_VIDEO_SIZE_MB=50
MAX_CHAT_FILE_SIZE_MB=10

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@tutorlyplatform.com
SUPPORT_EMAIL=support@tutorlyplatform.com

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PLATFORM_FEE_PERCENT=20

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Google Meet API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Daily.co Video Provider
DAILY_API_KEY=your_daily_api_key
DAILY_DOMAIN=your-subdomain.daily.co
USE_MOCK_VIDEO_PROVIDER=false

# Redis (for caching & WebSocket)
REDIS_URL=redis://localhost:6379/0

# Celery (background jobs)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Session Reminders
REMINDER_HOURS_BEFORE=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_UNAUTHENTICATED=10

# Minimum Withdrawal Amounts
MIN_BANK_WITHDRAWAL=50
MIN_PAYPAL_WITHDRAWAL=20
